{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run C++ Program",
            "type": "shell",
            "command": "./build/src/TBotSimulator",
            "problemMatcher": []
        },
        {
            "label": "Build with CMake",
            "type": "shell",
            "command": [
                "rm ./build -r -force;",
                "mkdir build; cd build; cmake .. -G 'MinGW Makefiles'; cmake --build ."
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Run Google Tests",
            "type": "shell",
            "command": [
                "cd /d ${workspaceFolder}/build; cmake --build .; ctest --verbose"
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            }
        }
    ]
}