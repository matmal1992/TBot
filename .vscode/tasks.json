{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run executable",
            "type": "shell",
            "command": "./build/tbot_runner",
            "problemMatcher": []
        },
        {
            "label": "Build project",
            "type": "shell",
            "command": [
                "rm ./build -r -force;",
                "mkdir build; cd build; cmake .. -DCMAKE_BUILD_TYPE=Debug -G 'MinGW Makefiles'; cmake --build ."
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Run tests",
            "type": "shell",
            "command": [
                "cd ${workspaceFolder}/build; cmake --build .; ctest --verbose"
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            }
        },
        {
            "label": "Format all files",
            "type": "shell",
            "command": [
                "@('./src/', './headers/', './tests/', './main.cpp') |",
                "ForEach-Object { $files = Get-ChildItem -Recurse -Path $_ -Include *.hpp, *.cpp, *.h |",
                "ForEach-Object { $_.FullName };",
                "if ($files) {",
                "clang-format -i $files } };",
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}