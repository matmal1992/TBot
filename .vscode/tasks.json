{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compile and Run C++",
            "type": "shell",
            "command": "g++",
            "args": [
                "main.cpp",
                "src/LoadCsvData.cpp",
                "-o",
                "bot_simulator"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Run C++ Program",
            "type": "shell",
            "command": "./bot_simulator",
            "dependsOn": [
                "Compile and Run C++"
            ]
        },
        {
            "label": "Build with CMake",
            "type": "shell",
            "command": [
                "rm ./build -r -force;",
                "mkdir build; cd build; cmake .. -G 'MinGW Makefiles'; cmake --build ."
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Run Google Tests",
            "type": "shell",
            "command": [
                "cd /d ${workspaceFolder}/build; cmake --build .; ctest --verbose"
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            }
        }
    ]
}