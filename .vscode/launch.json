{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "CDebug",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/src/TBotSimulator.exe",
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/build/src/",
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}